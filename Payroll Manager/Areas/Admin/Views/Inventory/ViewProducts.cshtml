@model Payroll_Manager.Areas.Admin.Models.VM_Inventory.InventoryIndexViewModel
@{
    ViewData["Title"] = "Sản phẩm event";

    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@{
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<environment names="Development,Staging,Production">
    <link href="~/css/Animated.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Employee.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/assets/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
</environment>

<div class="animated fadeIn employee index">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <nav aria-label="breadcrumb">
                        @* asp-action runs action method name *@
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Product List</li>
                        </ol>
                    </nav><br /><br />
                    <div class="row">
                        <div class="col-lg-12 table-responsive-md">
                            <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="title"><span><a href="#">Product List</a></span></div>
                                    </div>
                                </div>
                                <a class="btn btn-xs btn-outline-success float-md-right btnnewemployee" asp-action="Create"> New Product                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                </a>
                                <table id="datatable" class="table table-bordered dataTable no-footer desing" role="grid" aria-describedby="datatable_info">
                                    <thead class="thead-light">
                                        <tr role="row">
                                            <th class="border-top-0 sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="No: activate to sort column descending" style="width: 30px;">ID</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Hình ảnh</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Tên Sản Phẩm</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Giá tiền</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Giá khuyến mãi</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Số lượng nhập</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Số lượng bán</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Số lượng tồn</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Đã xóa</th>
                                            <th class="border-top-0 sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Lượt đặt</th>
                                            <th class="border-top-0 text-warning sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" aria-label="Time: activate to sort column ascending">Hoạt động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Inventories)
                                        {
                                            @if (item.Active == 1)
                                            {
                                                <tr role="row" class="odd">
                                                    <td>
                                                        <a class="text-primary" asp-controller="Categories" asp-action="Details" asp-route-id="@item.CategoryId">
                                                            @item.ProductId
                                                        </a>
                                                    </td>
                                                    <td><img style="height: 100px; width: 100px; text-align: center;" src="~/Product_images/@item.Image" /></td>
                                                    <td class="sorting_1" style="text-align: center;">@item.Name</td>
                                                    <td style="text-align: center;">@String.Format(info, "{0:c}", item.NetPrice.ToString("N0")) VNĐ </td>
                                                    <td style="text-align: center;">@String.Format(info, "{0:c}", item.SalePrice.ToString("N0")) VNĐ </td>
                                                    <td style="text-align: center;">@item.Quantity </td>
                                                    <td style="text-align: center;">@item.SaleQuantity </td>
                                                    <td style="text-align: center;">@item.RestQuantity </td>
                                                    <td style="text-align: center;"><span class="baddge baddge-md baddge-soft-success">Using</span></td>
                                                    <td id="seler-price" style="text-align: center;">@item.LuotDat</td>
                                                    <td>
                                                        <a style="padding: 10px" class="text-success" asp-action="Update" asp-route-id="@item.ProductId">
                                                            <i class="fas fa-bars"></i> Edit
                                                        </a>
                                                        <a style="padding:10px" class="text-success" asp-action="ViewProducts" asp-route-id="@item.ProductId">
                                                            <i class="fas fa-bars"></i> Detail
                                                        </a>
                                                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.ProductId">
                                                            <i class="far fa-trash-alt"></i> Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr role="row" class="odd">
                                                    <td>
                                                        <a class="text-primary" asp-controller="Categories" asp-action="Details" asp-route-id="@item.CategoryId">
                                                            @item.ProductId
                                                        </a>
                                                    </td>
                                                    <td><img style="height: 100px; width: 100px; text-align: center;" src="~/Product_images/@item.Image" /></td>
                                                    <td class="sorting_1" style="text-align: center;">@item.Name</td>
                                                    <td style="text-align: center;">@String.Format(info, "{0:c}", item.NetPrice.ToString("N0")) VNĐ  </td>
                                                    <td style="text-align: center;">@String.Format(info, "{0:c}", item.SalePrice.ToString("N0")) VNĐ </td>
                                                    <td style="text-align: center;">@item.Quantity </td>
                                                    <td style="text-align: center;">@item.SaleQuantity </td>
                                                    <td style="text-align: center;">@item.RestQuantity </td>
                                                    <td style="text-align: center;"><span class="baddge baddge-md baddge-soft-danger">Deleted</span></td>
                                                    <td id="seler-price" style="text-align: center;">@item.LuotDat</td>
                                                    <td>
                                                        <a style="padding:10px" class="text-success" asp-action="Update" asp-route-id="@item.ProductId">
                                                            <i class="fas fa-bars"></i> Edit
                                                        </a>
                                                        <a style="padding:10px" class="text-success" asp-action="ViewProducts" asp-route-id="@item.ProductId">
                                                            <i class="fas fa-bars"></i> Detail
                                                        </a>
                                                        <a class="text-danger" asp-action="Delete" asp-route-id="@item.ProductId">
                                                            <i class="far fa-trash-alt"></i> Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                                <br />
                                <br />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (@Model.InvenDetail == null)
            {
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <img src="~/Product_images/@Model.InvenDetail.Image" alt="" class=" mx-auto  d-block" width ="400" height="300">
                            </div><!--end col-->
                            <div class="col-lg-6 align-self-center">
                                <div class="single-pro-detail">
                                    <p class="mb-1">Chi tiết sản phẩm @Model.InvenDetail.ProductId</p>
                                    <div class="custom-border mb-3"></div>
                                    <h3 class="pro-title">@Model.InvenDetail.Name</h3>
                                    <h2 class="pro-price">@String.Format(info, "{0:c}", Model.InvenDetail.SalePrice.ToString("N0")) VNĐ <span><del>@String.Format(info, "{0:c}", Model.InvenDetail.NetPrice.ToString("N0")) VNĐ</del></span></h2>
                                    <h6 class="text-muted font-13">Ghi chú :</h6>
                                    <ul class="list-unstyled pro-features border-0">
                                        @Html.Raw(Model.InvenDetail.Description)
                                    </ul>
                                    <div class="quantity mt-3 ">
                                        <a href="/Admin/Inventory/ViewProducts" class="btn btn-gradient-primary text-white px-4 d-inline-block"><i class="mdi mdi-cart mr-2"></i>Reload danh sách sản phẩm</a>
                                    </div>
                                </div>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div><!--end card-body-->
                </div>
            }
            <!--end card-->
        </div>
    </div>
</div>
<environment names="Development,Staging,Production">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/scripts/jquery.crypto-exchange.init.js"></script>
</environment>
