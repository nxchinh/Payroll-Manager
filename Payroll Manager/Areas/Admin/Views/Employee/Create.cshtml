@model Payroll_Manager.Areas.Admin.Models.VM_Employee.EmployeeCreateViewModel
@{ ViewData["Title"] = "Nhân viên"; }
<link href="/css/Animated.css" rel="stylesheet" type="text/css" />
<link href="/css/Employee.css" rel="stylesheet" type="text/css" />
<div class="animated fadeIn employee">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">New Employee</li>
                    </ol>
                </nav>
                <br />
                <br />
                <div class="title"><span><a href="#">Add Employee</a></span></div>
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="EmployeeNo"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="EmployeeNo" class="form-control" placeholder="EMP000" />
                            <span asp-validation-for="EmployeeNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="DateJoined"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="DateJoined" class="form-control" />
                            <span asp-validation-for="DateJoined" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="FirstName"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name.." />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <input asp-for="MiddleName" class="form-control" placeholder="Enter Middle Name.." />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="LastName"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="Gender"></label>
                        </div>
                        <div class="form-check col-md-3">
                            <select class="form-control" asp-for="Gender">
                                <option>Male</option>
                                <option>Female</option>
                                @* Alternatively:
                                    <input asp-for="Gender" type="radio" value="Male" /> Male
                                    <input asp-for="Gender" type="radio" value="Male" /> Male *@
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">

                        </div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="DOB"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="DOB" class="form-control" />
                            <span asp-validation-for="DOB" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="NationalInsuranceNo"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="NationalInsuranceNo" class="form-control" placeholder="Enter NI number.." />
                            <span asp-validation-for="NationalInsuranceNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="Email"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="Email" class="form-control" placeholder="Enter Email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="Phone"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="Phone" class="form-control" placeholder="Enter Phone number.." />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="PaymentMethod"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<Payroll_Manager.Entity.PaymentMethod>()"></select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="StudentLoan"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <select asp-for="StudentLoan" class="form-control" asp-items="Html.GetEnumSelectList<Payroll_Manager.Entity.StudentLoan>()"></select>
                            <span asp-validation-for="StudentLoan" class="text-danger"></span>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="UnionMember"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <select asp-for="UnionMember" class="form-control" asp-items="Html.GetEnumSelectList<Payroll_Manager.Entity.UnionMember>()"></select>
                            <span asp-validation-for="UnionMember" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="Designation"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="Designation" class="form-control" placeholder="Enter Role..." />
                            <span asp-validation-for="Designation" class="text-danger"></span>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="form-group col-md-1">
                            <label id="title4" asp-for="ImageUrl"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="btn btn-primary btn-icon-text">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <input asp-for="ImageUrl" type="file" value="Upload" accept="image/*" onchange="showMyImage(this)" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label id="title4" asp-for="AddressId">Địa chỉ</label>
                        <select asp-for="AddressId" class="form-control" asp-items="ViewBag.Addresses">
                            <option value="" selected disabled>--- Chọn địa chỉ ---</option>
                        </select>
                        <span asp-validation-for="AddressId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label id="title4" asp-for="DepartmentId">Bộ phận</label>
                        <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments,"Id","Name"))">
                            <option value="" selected disabled>--- Chọn bộ phận ---</option>
                        </select>
                    </div>
                    <img id="thumbnil" style="width:20%; margin-top:10px;" src="" alt="image" />
                    <br />
                    <br />

                    <div class="form-group">

                        <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                        <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                        <br />
                        <br />
                        <br />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@* Validation scripts*@
<script type="text/javascript">
    function showMyImage(fileInput) {
        var files = fileInput.files;
        for (var i = 0; i < files.length; i++) {
            var file = files[i];
            var imageType = /image.*/;
            if (!file.type.match(imageType)) {
                continue;
            }
            var img = document.getElementById("thumbnil");
            img.file = file;
            var reader = new FileReader();
            reader.onload = (function (aImg) {
                return function (e) {
                    aImg.src = e.target.result;
                };
            })(img);
            reader.readAsDataURL(file);
        }
    }
</script>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}