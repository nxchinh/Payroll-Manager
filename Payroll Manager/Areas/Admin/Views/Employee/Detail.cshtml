@using Payroll_Manager.Persistence
@model Payroll_Manager.Areas.Admin.Models.VM_Employee.EmployeeDetailViewModel
@{ ViewData["Title"] = "Nhân viên"; }
<link href="/css/Animated.css" rel="stylesheet" type="text/css" />
<link href="/css/Employee.css" rel="stylesheet" type="text/css" />
<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách nhân viên</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết nhân viên</li>
                </ol>
            </nav><br /><br />
            <div class="wrap d-flex justify-content-start justify-content-sm-center flex-wrap">
                <img class="rounded-circle shadow-lg" style="width:300px; height:350px" src="~/images/@Model.ImageUrl" alt="" />
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-success" style="font-size:20px">Tên đầy đủ: @Model.FullName</p>
                    <p class="font-weight-normal"> Bằng cấp: @Model.Designation</p>
                    <p class="font-weight-normal"> Chức vụ: @Model.DepId</p>
                    <p class="font-weight-normal"> Tên công ty: @Model.DepId</p>
                    <p class="font-weight-normal"> Giới tính: @Model.Gender</p>
                    <p class="font-weight-normal">Ngày sinh: @Model.DOB.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal">Employee Number: @Model.EmployeeNo</p>
                    <p class="font-weight-normal">NI Number: @Model.NationalInsuranceNo</p>
                    <p class="font-weight-normal">Email: <a href="#">@Model.Email</a></p>
                    <p class="font-weight-normal">SDT: <a href="tel:@Model.Phone">@Model.Phone</a></p>
                    <br /><br />
                    <p class="font-weight-bold"> Pay & Deductions</p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal"> Cách chi trả: @Model.PaymentMethod</p>
                    <p class="font-weight-normal"> Vay sinh viên: @Model.StudentLoan</p>
                    <p class="font-weight-normal"> Union Member: @Model.UnionMember</p>
                    <p class="font-weight-normal"><i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue"></i> <a href="mailto:@Model.Email?subject=Payslip&body=Attached within is your paylip.">Send Payslip</a></p>
                    <br /><br />

                    <p class="font-weight-bold"> Địa chỉ</p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal"> Id: @Model.AddressId</p>
                    <p class="font-weight-normal"> Thành phố: @Model.Address.City</p>
                    <p class="font-weight-normal"> Mã căn hộ: Căn hộ @Model.Address.AptNumber</p>
                    <p class="font-weight-normal"> Địa chỉ: @Model.Address.StreetAddress</p>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>

