@model Payroll_Manager.Areas.Admin.Models.VM_Customer.CustomerCreateViewModel
@{ ViewData["Title"] = "Khách hàng"; }
<link href="/css/Animated.css" rel="stylesheet" type="text/css" />
<link href="/css/Employee.css" rel="stylesheet" type="text/css" />
<div class="animated fadeIn employee">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Customer List</a></li>
                        <li class="breadcrumb-item active" aria-current="page">New Customer</li>
                    </ol>
                </nav>
                <br />
                <br />
                <div class="title"><span><a href="#">Add Customer</a></span></div>
                <form method="post" asp-controller="Customer" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="Email"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <input asp-for="Email" class="form-control" placeholder="EMP000" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="PhoneNum"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <input asp-for="PhoneNum" class="form-control" />
                            <span asp-validation-for="PhoneNum" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="FirstName"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name.." />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label id="title4" asp-for="LastName"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label id="title4" asp-for="AddressId">Choose address</label>
                        <select asp-for="AddressId" class="form-control" asp-items="ViewBag.Addresses">
                            <option value="" selected disabled>--- Select Address ---</option>
                        </select>
                        <span asp-validation-for="AddressId" class="text-danger"></span>
                    </div>
                    <br />
                    <br />

                    <div class="form-group">

                        <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                        <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                        <br />
                        <br />
                        <br />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@* Validation scripts*@

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}