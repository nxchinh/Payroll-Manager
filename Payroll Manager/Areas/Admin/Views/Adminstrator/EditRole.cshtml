@model Payroll_Manager.Areas.Admin.Models.VM_DoanhNghiep.EditRoleViewModel
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Sửa quyền";
}
    <link href="/css/purchase.css" rel="stylesheet" type="text/css" />
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title mt-0 mb-3">Sửa quyền</h4>
                <form asp-action="EditRole" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" disabled class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="RoleName" class="control-label"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-outline-primary">Submit</button>
                            <a asp-action="ListRoles" class="btn btn-outline-success">Trở về danh sách</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4 class="header-title mt-0 mb-3">Người dùng trong vai trò này</h4>
            </div>
            <div class="card-body">

                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
            <h5 class="card-title">Không có người dùng trong vai trò này</h5>

                }
            </div>
            <div class="card-footer">
                <a class="btn btn-outline-primary" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">
                    quản lý người dùng trong quyền
                </a>
            </div>
        </div>
    </div>
</div>

