@model Payroll_Manager.Entity.ModelForUser.SaleItem
@{ ViewBag.Title = "ReturnItem"; }


<link href="/css/purchase.css" rel="stylesheet" type="text/css" />
<div class="page-content">

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-right">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">GiaoDich</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">ChiTietGiaoDich</a></li>
                            <li class="breadcrumb-item active">Sửa Giao Dịch</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-content">
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title mt-0 mb-3">Billing Details</h4>
                        <div class="billing-nav">
                            <ul class="nav nav-pills justify-content-center text-center mb-3" id="pills-tab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="pills-credit-card-tab" data-toggle="pill" href="#pills-credit-card"><i class="mdi mdi-credit-card d-block mx-auto text-danger font-18"></i>Thêm sản phẩm</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="pills-paypal-tab" data-toggle="pill" href="#pills-paypal"><i class="mdi mdi-credit-card d-block mx-auto text-secondary font-18"></i>Trả sản phẩm</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade active show" id="pills-credit-card">
                                    <div class="demo-container">
                                        <div class="form-container" style="text-align: center;
                                                                          padding: 10px;">
                                            <h4 class="mt-0 header-title"><strong>Chi tiết giao dịch</strong></h4>
                                            <p class="text-muted">Nhập số lượng sản phẩm trả lại</p>
                                            <form method="Post" asp-controller="SaleItem" asp-action="ProcessReturn">
                                                <input id="qty" name="qty" type="Text" class="form-control col-md-6 mb-3" />
                                                <input value="Submit" class="btn btn-soft-success btn-success px-3" type="Submit" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="pills-paypal">
                                    <div class="demo-container">
                                        <div class="form-container" style="text-align: center; padding: 10px;">
                                            <h4 class="mt-0 header-title"><strong>Chi tiết giao dịch</strong></h4>
                                            <p class="text-muted">Nhập số lượng sản phẩm thêm vào</p>
                                            <form method="Post" asp-controller="SaleItem" asp-action="ProcessAdd">
                                                <input id="qty" name="qty" type="Text" class="form-control col-md-6 mb-3" />
                                                <input value="Submit" class="btn btn-soft-success btn-success px-3 mb-3" type="Submit" />
                                            </form>
                                        </div>
                                    </div>
                                </div><!--end tab-pane-->
                            </div><!--end tab-content-->
                        </div> <!--end billing-nav-->
                    </div><!--end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}