        <div class="col-xs-12">
            <div class="form-material form-material-primary floating">
                <input class="form-control" asp-for="Input.Email" placeholder="Email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
    </div>
