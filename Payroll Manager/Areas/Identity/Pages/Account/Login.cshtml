        <div class="col-xs-12">
            <div class="form-material form-material-primary floating">
                <input class="form-control" type="password" asp-for="Input.Password" placeholder="Mật khẩu">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <label class="css-input switch switch-sm switch-primary">
                <input type="checkbox" asp-for="Input.RememberMe"><span></span> Nhớ tài khoản?
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <button class="btn btn-block btn-primary" type="submit">Đăng Nhập</button>
        </div>
    </div>
</form>
